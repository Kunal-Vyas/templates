{
    "compilerOptions": {
	"target": "ES5",
        "module": "system",
	    "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
	    "emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
        "outFile": "build/index.js",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".npm",
        "**/*.spec.ts"
    ]
}